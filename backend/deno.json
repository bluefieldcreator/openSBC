{
	"tasks": {
		"start-backend": "deno run --allow-net --allow-env --allow-read structures/bootstrapper.ts",
		"start-test": "deno test --allow-read --allow-env --allow-net"
	},
	"nodeModulesDir": "auto",
	"lint": {
		"exclude": [
			"node_modules/",
			"generated/"
		],
		"rules": {
			"tags": [
				"recommended"
			],
			"include": [
				"ban-untagged-todo"
			],
			"exclude": [
				"no-unused-vars"
			]
		}
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 500,
		"indentWidth": 6,
		"semiColons": false,
		"singleQuote": false,
		"proseWrap": "preserve",
		"exclude": [
			"node_modules/",
			"generated/"
		]
	},
	"imports": {
		"hono": "jsr:@hono/hono@^4.6.6"
	},
	"compilerOptions": {
		"jsx": "precompile",
		"jsxImportSource": "hono/jsx"
	}
}
